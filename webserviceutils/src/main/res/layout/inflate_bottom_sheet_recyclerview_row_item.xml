<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llLanguageItemParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_row_item_bg"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivResIcon"
            android:layout_width="@dimen/margin24dp"
            android:layout_height="@dimen/margin24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin16dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_plugin_action_location_found"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextViewSubHeadingsTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:autoLink="all"
            android:drawableTint="@color/primerColorBlack"
            android:gravity="center"
            android:text="Lorem Ipsum"
            android:textColor="@color/primerColorBlack"
            android:textSize="@dimen/textSize16dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>